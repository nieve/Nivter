<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user, size: 40 %>
				<%= @user.name %>
			</h1>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
		<section>
			<h4>Areas of experience</h4>
			<div id='tagdisplay'>
				<% @user.experience_tags.each do |tag| %>
					<a href="/users?search=<%=tag%>"><span class="sotag"><%= tag %></span></a>
				<% end %>
			</div>
		</section>
		<section>
			<h4>Areas of interest</h4>
			<div id='interestdisplay'>
				<% @user.interested_in_tags.each do |tag| %>
					<a href="/users?search=<%=tag%>"><span class="sotag"><%= tag %></span></a>
				<% end %>
			</div>
		</section>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if (signed_in? and not current_user?(@user)) %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>